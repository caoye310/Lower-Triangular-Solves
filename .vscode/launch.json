{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug run_sparse (host + CUDA)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/run_sparse",
      "args": ["data/onetone2.mtx"],        
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}

